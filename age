def check_age():
    try:
        # Prompt the user to enter their age
        age = int(input("Enter your age: "))
        
        # Check if the age is valid
        if age <= 0:
            print("Invalid age! Age must be a positive number.")
        else:
            # Check if the age is odd or even
            if age % 2 == 0:
                print(f"The age {age} is valid and it is an even number.")
            else:
                print(f"The age {age} is valid and it is an odd number.")
    except ValueError:
        print("Invalid input! Please enter a valid integer.")

# Call the function
check_age()
